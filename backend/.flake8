# backend/.flake8

[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    migrations,
    alembic,
    .pytest_cache
ignore = 
#   whitespace before ':'
    E203
     # line too long (handled by Black)
    E501
    # line break before binary operator
    W503
    # module level import not at top of file
    E402
      
per-file-ignores =
    __init__.py:F401